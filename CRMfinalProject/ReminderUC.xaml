<UserControl x:Class="CRMfinalProject.ReminderUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRMfinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="606" Height="40">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="316*"/>
            <ColumnDefinition Width="92*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/image/reminder2.png" Grid.Column="4"/>
        <Image Source="/image/info2.png" />
        <TextBlock x:Name="remindertitle" Text="عنوان" Foreground="#f2f2f2" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Calibri" FontSize="14" Margin="0,6,8,6"/>
        <TextBlock x:Name="reminderinfo" Text="متن" Foreground="#f2f2f2" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Calibri" FontSize="14" Margin="0,6,9,6"/>
    </Grid>
</UserControl>
